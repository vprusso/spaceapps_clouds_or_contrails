<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="android.captainhampton.com.spaceapps.UserLocationActivity">

    <ImageButton
        android:src="@mipmap/ic_close_black_24dp"
        android:layout_width="58dp"
        android:layout_height="48dp"
        android:id="@+id/ibCloseBtn"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/ivImageToUpload" />

    <ImageView
        android:layout_width="366dp"
        android:layout_height="366dp"
        android:id="@+id/ivImageToUpload"
        android:layout_gravity="center"
        android:layout_below="@+id/ibCloseBtn"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contrail Probability: "
        android:id="@+id/tvChances"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/ivImageToUpload"
        android:layout_alignParentStart="true" />


    <ProgressBar
        android:id="@+id/pbAPIProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tvAPIResponse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</RelativeLayout>
